@import './vendor/rupture.styl'

.block__button_share
	display: inline-block
	position: relative
	.share_inline
		margin: 35px auto
	.share__container
		display: inline-block
		position: relative
	.share__button
		position: relative
		width: 32px
		height: 32px
		overflow: hidden
		padding: 0
		outline: none
		vertical-align: top
		cursor: pointer
		transition: all .15s
		border: 0
		background-color: $tranparent
		&:hover
			opacity: .7
		// &:focus
		// &:active
		// 	box-shadow: 0 0 0 3px rgba(76, 165, 197, .8)
		svg
			margin: 10%
			width: 80%
			height: 80%
			fill: #fff
		&--fb
			background-color: #3a5999
			svg
				margin: 0
				width: 100%
				height: 100%
		&--messenger
			background-color: #0099ff
			svg
				margin: 10%
				width: 80%
				height: 80%
		&--twitter
			background-color: #55acee
		&--gplus
			background-color: #dd4b39
		&--whatsapp
			background-color: #25d366
		&--linkedin
			background-color: #0077b5
		&--pinterest
			background-color: #bd081c
		&--rss
			background-color: #f56f0a
		&--email
			background-color: #bdbdbd
		&--more
			width: 24px
			height: 24px
			background-color: #fff
			svg
				fill: #757575
				width: 100%
				height: 100%
				margin: 0
	.share__options
		padding: 10px
		border: 1px solid #e0e0e0
		border-radius: 3px
		background-color: #fff
		position: absolute
		left: -147px
		transform: translateX(50%)
		top: -36px
		width: 95px
		// height: 95px
		display: flex
		text-align: center
		flex-wrap: wrap
		justify-content: space-between
		align-items: space-between
		z-index: 3
		.share__button
			border-radius: 50%
			color: #fff
			&:nth-child(1)
			&:nth-child(2)
				margin-bottom: 10px
		&.share__options_mobile
			top: -57px
			.share__button
				&:nth-child(3)
				&:nth-child(4)
					margin-bottom: 10px
		&::before
			content: ''
			position: absolute
			right: -5px
			top: calc(50% - 5px)
			width: 10px
			height: 10px
			background-color: #fff
			border: 1px solid #e0e0e0
			border-left: 0
			border-bottom: 0
			transform: rotate(45deg)
		.share__button
			margin-right: 0
			flex-shrink: 0
