@import	'./default/main.styl'
@import './overrides/overrides.styl'

$secondary = $gray-150
$primary = $black

// breakpoints
$bp-big = 1200px
$bp-medium = 1000px
$bp-small = 700px

body, html {
	background-color: $dark
}

#app
	max-width: 1400px
	background-color: $dark

	a
		&.person
			text-decoration: none
			color: inherit

	.container
		display: flex;
		flex-direction: column;
		min-height: calc(100vh - 60px);
		justify-content: space-between
		font-weight: 300
		// home
		@import './components/home.styl'
		@import './components/forms.styl'
		@import './components/text.styl'
		@import './components/person.styl'
		@import './components/right.styl'
		@import './components/left.styl'

		// Columns
		& > div, .footer
			display: grid
			grid-template-columns: 300px 1fr 300px
			grid-template-areas: "left center right"
			gap: 45px

			+below($bp-big)
				grid-template-columns: 200px 1fr 300px

			+below($bp-medium)
				grid-template-columns: 200px 1fr
				grid-template-areas: "left center" ". right"

			+below($bp-small)
				gap: 0
				grid-template-columns: 1fr
				grid-template-areas: "left" "center" "right"
				&.profile
					grid-template-areas: "center" "left" "right"

		.footer
			font-size: 16px
			& > div
				grid-area: center
				color: $secondary
			span
				display: block
			&__role
				margin-top: 20px
				font-weight: bold


