@import	'./default/main.styl'

$bg-color = #1F1F1F
$secondary = #999999
$primary = #FFFFFF

body, html {
	background-color: $bg-color
}

#app
	max-width: 1400px
	background-color: $bg-color

	a
		&.person
			text-decoration: none
			color: inherit

	.container
		display: flex;
		flex-direction: column;
		min-height: calc(100vh - 60px);
		justify-content: space-between
		font-weight: 300
		color: $primary
		// home
		@import './components/home.styl'
		@import './components/forms.styl'
		@import './components/text.styl'
		@import './components/person.styl'
		@import './components/right.styl'
		@import './components/left.styl'

		// Columns
		& > div, .footer
			display: grid
			grid-template-columns: 300px 1fr 300px
			grid-template-areas: "left center right"
			column-gap: 45px

		.footer
			font-size: 16px
			& > div
				grid-area: center
				color: $secondary
			span
				display: block
			&__role
				margin-top: 20px
				font-weight: bold


