.f-forms
	position: relative
	max-width: 400px
	margin: 0 0 20px
	padding: 0
	border: 0
	color: $color-negative
	font-family: $base-font-family
	&_inline
		display: inline-block
		margin: 0 20px 20px 0
		+mobile()
			display: block
	&__label
		font-family: $base-font-family
		font-weight: 500
		font-size: 16px
		display: block
		p
			padding: 0

	&__select,
	&__text,
	&__textarea
		font-family: $base-font-family
		font-size: 16px
		font-weight: 400
		background-color: #fafafa
		border: solid $border-width $color-gray
		border-radius: $border-radius
		appearance: none
		min-width: 100px
		padding: 8px 15px
		width: 100%
		max-width: 400px
		&:focus
			box-shadow: 0 0 5px $color-brand inset
			border-color: rgba(#4ca5c5, 0.7)


	&__select
		background: #fafafa url('https://arte.folha.uol.com.br/library/folhastyle/2.1/images/components/forms/arrow-up-down.svg') 95% center no-repeat
		background-size: 9px
		background-repeat: no-repeat
		padding-right: 2.188em
		-webkit-appearance: none
		appearance: none
		width: 100%
		padding: 10px 25px 10px 10px
		+mobile()
			width: 100%
	&__textarea
		vertical-align: top
		resize: vertical
		height: auto
		min-height: 38px

	&__button
		font-family: $base-font-family
		font-size: 16px
		font-weight: 400
		border: none
		border-radius: $border-radius
		color: #fff
		padding: 8px 15px
		display: inline-block
		vertical-align: middle
		width: initial
		cursor: pointer
		margin: 0 20px 0 0
		&_primary
			background: $color-brand
			color: #fff
			&:hover
				background-color: $color-brand-light
			&_small
				font-size: 14px
			&_big
				font-size: 20px
		&:disabled
			background: $color-gray-dark
			color: #fff

		&_secondary
			background: transparent
			border: solid $border-width $color-brand
			color: $color-brand
			&:hover
				background: transparent
				color: $color-brand-light
				border: solid $border-width $color-brand-light
			&:disabled
				background: transparent
				border: solid $border-width $color-gray-dark
				color: $color-gray-dark
	&__error
		.f-forms__label
			background-color: #fff
			color: #e51717
		.f-forms__select,
		.f-forms__text,
		.f-forms__textarea
			border-color: #e51717
		&_text
			color: #e51717
			clear: both
			display: block
			margin-top: -1px
			padding: 3px 0

.f-forms__radio,
.f-forms__checkbox
	position: absolute
	opacity: 0
	width: 13px
	height: 13px

.f-forms__checkbox + .f-forms__label,
.f-forms__radio + .f-forms__label
	display: inline-block
	margin-top: 4px
	margin-right: 15px
	padding-left: 28px
	position: relative
	cursor: pointer
	font-weight: 400
	line-height: 15px
	user-select: none

.f-forms__checkbox + .f-forms__label:before,
.f-forms__radio + .f-forms__label:before
	position: absolute
	top: 0
	left: 0
	width: 18px
	height: 18px
	border: solid $border-width $color-gray
	box-sizing: border-box
	content: ''
	background-color: #fff
	transition: all .1s ease-in

.f-forms__radio + .f-forms__label:before
	border-radius: 9999px

.f-forms__checkbox:checked + .f-forms__label:after
.f-forms__radio:checked + .f-forms__label:after
	opacity: 1

.f-forms__radio + .f-forms__label:after
	background-color: $color-brand
	border-radius: 50%
	height: 8px
	width: 8px
	left: 4px
	top: 4px

.f-forms__checkbox + .f-forms__label:after,
.f-forms__radio + .f-forms__label:after
	content: ''
	opacity: 0
	position: absolute
	top: 5px
	left: 5px
	transition: .1s opacity ease-in

.f-forms__checkbox + .f-forms__label:after,
.f-forms__checkbox + .f-forms__label:before
	border-radius: 3px

.f-forms__checkbox + .f-forms__label:after
	top: 0
	left: 0

.f-forms__checkbox + .f-forms__label:after
	background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1024 852.5'><style>.st0{fill:#0078a4}</style><path class='st0' d='M0 505.5l346.9 347L1024 175.1 848.5 0 346 501.4l-170.5-171'/></svg>");
	background-repeat: no-repeat
	height: 18px
	width: 18px
	background-size: 14px
	background-position: 50% 50%


.f-forms__button + .f-forms__button
	margin: 0 20px 0 0

.msie
	.f-forms
		&__button_primary
			padding: 15px 0 6px
		&__text
			padding: 15px 20px 6px
