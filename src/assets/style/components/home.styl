.home
	.notfound
	.people
		grid-area: center;

	.notfound
		color: $secondary
	.sorting
		display: flex
		align-items: center
		margin-bottom: 30px
		color: $primary
		font-family: $base-font-family

		.order-select
			cursor: pointer;
			background: none
			border: 0
			appearance: none
			color: $primary
			margin: 0 3px
			font-family: $base-font-family
		.order-arrow
			cursor: pointer
			height: 30px
			color: $primary
			background: none
			border: 0
			margin: 0
			padding: 0
			appearance: none
			display: flex
			align-content: center
