.person
	display: block
	display: grid
	grid-template-columns: 40px 1fr
	column-gap: 13px
	margin-bottom: 32px;
	align-items: end
	font-family: $base-text-font-family
	color: $secondary
	font-size: 15px

	.age-column
		text-align: right

	.age
		font-weight: bold
		font-size: 20px

	.name
		color: $primary
		font-weight: bold
		font-size: 20px

	.subtitle
		font-size: 15px
		font-family: $base-font-family
